<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiPractica.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:MauiPractica.View"
    Title="MauiPractica">

    

    <ShellContent
    Title="Empleados"
    ContentTemplate="{DataTemplate v:MainView}"
    Route="EmpleadosView"/>

    <ShellContent
Title="Departamentos"
ContentTemplate="{DataTemplate v:DepartamentoView}"
Route="DepartamentosView"/>

    <ShellContent
Title="Settings"
ContentTemplate="{DataTemplate v:SettingsView}"
Route="SettingsView"/>

</Shell>
